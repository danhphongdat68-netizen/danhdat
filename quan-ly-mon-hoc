<h1>üìö Qu·∫£n l√Ω m√¥n h·ªçc</h1>

<input id="mon" placeholder="T√™n m√¥n">
<input id="diem" placeholder="ƒêi·ªÉm">
<button onclick="themMon()">Th√™m</button>

<table>
    <thead>
        <tr>
            <th>M√¥n h·ªçc</th>
            <th>ƒêi·ªÉm</th>
            <th>X√≥a</th>
        </tr>
    </thead>
    <tbody id="danhsach"></tbody>
</table>

<script>
    let data = JSON.parse(localStorage.getItem("monhoc")) || [];

    function hienThi() {
        let html = "";
        data.forEach((m, i) => {
            html += `
            <tr>
                <td>${m.mon}</td>
                <td>${m.diem}</td>
                <td><button onclick="xoa(${i})">‚ùå</button></td>
            </tr>`;
        });
        document.getElementById("danhsach").innerHTML = html;
        localStorage.setItem("monhoc", JSON.stringify(data));
    }

    function themMon() {
        let mon = document.getElementById("mon").value;
        let diem = document.getElementById("diem").value;
        if(mon && diem) {
            data.push({mon, diem});
            hienThi();
        }
    }

    function xoa(i) {
        data.splice(i, 1);
        hienThi();
    }

    hienThi();
</script>

